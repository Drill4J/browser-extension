{
  "name": "@drill4j/browser-extension",
  "version": "0.0.0",
  "scripts": {
    "lint": "tslint \"./**/*.tsx\" \"./**/*.ts\"",
    "format:ts": "npm run lint -- --fix",
    "format": "npm run format:js && prettier --write */**/*.scss */**/*.md",
    "dev": "webpack --config webpack.config.ts --mode development --inline=false --port 3001 --watch",
    "build": "webpack -p --env.production",
    "test": "jest --notify",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:lang:en": "webpack --display none --env.dev && babel localization/translator.js | node",
    "manage:translations": "webpack --display none --env.dev && babel-node ./localization/translatorRunner.js",
    "manage:translations:test": "webpack --display none --env.dev && babel-node ./localization/translatorRunnerCheck.js",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again"
  },
  "dependencies": {
    "@redneckz/react-bem-helper": "2.0.3",
    "@types/react": "16.8.12",
    "@types/react-dom": "16.8.3",
    "@types/react-router-dom": "4.3.1",
    "axios": "0.18.0",
    "html-react-parser": "0.6.4",
    "react": "16.8.6",
    "react-custom-scrollbars": "4.2.1",
    "react-dom": "16.8.6",
    "react-draggable": "3.1.1",
    "react-resizable": "1.7.5",
    "react-router-dom": "5.0.0",
    "typescript": "3.4.1",
    "webextension-polyfill-ts": "0.9.0"
  },
  "devDependencies": {
    "@types/clean-webpack-plugin": "0.1.3",
    "@types/compression-webpack-plugin": "2.0.0",
    "@types/copy-webpack-plugin": "4.4.3",
    "@types/extract-text-webpack-plugin": "3.0.4",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mini-css-extract-plugin": "0.2.0",
    "@types/webpack": "4.4.27",
    "awesome-typescript-loader": "5.2.1",
    "babel-core": "6.26.3",
    "clean-webpack-plugin": "0.1.19",
    "compression-webpack-plugin": "1.1.11",
    "copy-webpack-plugin": "4.6.0",
    "css-loader": "0.28.11",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "lint-staged": "8.1.0",
    "mini-css-extract-plugin": "0.5.0",
    "moment-locales-webpack-plugin": "1.0.7",
    "node-sass": "4.11.0",
    "postcss-loader": "2.1.5",
    "prettier": "1.14.3",
    "raw-loader": "0.5.1",
    "react-hot-loader": "4.8",
    "sass-loader": "7.1.0",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.1",
    "svg-inline-loader": "0.8.0",
    "ts-node": "8.0.3",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "webpack": "4.29.6",
    "webpack-chrome-extension-reloader": "^1.3.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{sass,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
