{
  "manifest_version": 2,

  "name": "Drill4j",
  "description": "This extension allows you manage the drill widget",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "script-background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["script-content.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "alarms",
    "nativeMessaging",
    "activeTab",
    "tabs",
    "cookies",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
